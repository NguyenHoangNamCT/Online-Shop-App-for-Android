<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/custom_linear_layout">

    <!-- Hình ảnh sản phẩm -->
    <ImageView
        android:id="@+id/imageView_anhsanpham_dong_check_out"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ao"
        android:scaleType="centerCrop"
        android:contentDescription="Không có ảnh" />

    <!-- Thông tin sản phẩm -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/textView_textviewSanPham_dong_check_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Giá sản phẩm -->
        <TextView
            android:id="@+id/textView_giasanpham_dong_check_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20 000 đ"
            android:textSize="14sp" />

        <!-- Số lượng sản phẩm -->
        <TextView
            android:id="@+id/textView_soluongsanpham_dong_check_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
