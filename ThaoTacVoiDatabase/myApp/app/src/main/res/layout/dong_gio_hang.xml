<!-- list_item_cart.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/checkbox_san_pham_dong_gio_hang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:paddingEnd="-20dp"/>

        <!-- Hình ảnh sản phẩm -->
        <ImageView
            android:id="@+id/anh_san_pham_dong_gio_hang"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ao"
            android:scaleType="centerCrop"
            android:contentDescription="Không có ảnh"/>
    </LinearLayout>

    <!-- Thông tin sản phẩm -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/textView_san_pham_dong_gio_hang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- Giá tiền -->
        <TextView
            android:id="@+id/gia_san_pham_dong_gio_hang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá"
            android:textSize="14sp"
            android:textColor="#FF0000"/>

        <!-- Số lượng sản phẩm -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Button giảm số lượng -->

            <!-- EditText để nhập số lượng -->
            <Button
                android:id="@+id/giam_so_luong_button_dong_gio_hang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_weight="2"/>

            <EditText
                android:id="@+id/so_luong_edittext_dong_gio_hang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="14sp"
                android:ems="4"
                android:textAlignment="center"
                android:paddingHorizontal="8dp"
                android:layout_weight="3"
                android:gravity="center_horizontal"/>

            <!-- Button tăng số lượng -->
            <Button
                android:id="@+id/tang_so_luong_button_dong_gio_hang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_weight="2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
