<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm loại sản phẩm"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>

    <!-- Tên loại sản phẩm -->
    <EditText
        android:id="@+id/editTextTenLoaiSanPham_activity_themloaisp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên loại sản phẩm"
        android:padding="12dp" />

    <!-- Mô tả -->
    <EditText
        android:id="@+id/editTextMoTa_activity_themloaisp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả"
        android:padding="12dp"
        android:inputType="textMultiLine"
        android:minLines="3"/>

    <!-- Nút để chọn hình ảnh -->
    <Button
        android:id="@+id/buttonChonHinhAnh_activity_themloaisp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn hình ảnh"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/mauPhu3"/>

    <!-- ImageView để hiển thị hình ảnh đã chọn -->
    <ImageView
        android:id="@+id/imageViewHinhAnh_activity_themloaisp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        android:contentDescription="Hình ảnh sản phẩm"
        android:visibility="gone"/> <!-- Ẩn khi chưa chọn hình ảnh -->

    <!-- Nút lưu loại sản phẩm -->
    <Button
        android:id="@+id/buttonThemLoaiSP_activity_themloaisp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm loại sản phẩm"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/yellow"/>
</LinearLayout>
